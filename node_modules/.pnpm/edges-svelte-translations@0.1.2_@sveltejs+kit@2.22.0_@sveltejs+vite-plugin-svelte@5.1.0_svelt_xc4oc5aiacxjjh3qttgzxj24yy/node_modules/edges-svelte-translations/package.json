{
  "name": "edges-svelte-translations",
  "version": "0.1.2",
  "license": "MIT",
  "author": "Pixel1917",
  "description": "Elegant, type-safe and SSR-friendly internationalization for edges-svelte",
  "homepage": "https://github.com/Pixel1917/edges-svelte-translations",
  "bugs": {
    "url": "https://github.com/Pixel1917/edges-svelte-translations/issues",
    "email": "sank195951@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Pixel1917/edges-svelte-translations.git"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "files": [
    "dist",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*"
  ],
  "sideEffects": [
    "**/*.css"
  ],
  "svelte": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js"
    }
  },
  "peerDependencies": {
    "edges-svelte": ">=1.0.3",
    "@sveltejs/kit": "^2.16.0",
    "svelte": "^5.0.0"
  },
  "devDependencies": {
    "@eslint/compat": "^1.2.5",
    "@eslint/js": "^9.18.0",
    "@sveltejs/adapter-auto": "^6.0.0",
    "@sveltejs/kit": "^2.16.0",
    "@sveltejs/package": "^2.0.0",
    "@sveltejs/vite-plugin-svelte": "^5.0.0",
    "edges-svelte": "^1.0.3",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-svelte": "^3.0.0",
    "globals": "^16.0.0",
    "prettier": "^3.4.2",
    "prettier-plugin-svelte": "^3.3.3",
    "publint": "^0.3.2",
    "svelte": "^5.0.0",
    "svelte-check": "^4.0.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.20.0",
    "vite": "^6.2.6",
    "semantic-release": "^24.2.3",
    "husky": "^9.1.7",
    "git-cz": "^4.9.0",
    "commitizen": "^4.3.1",
    "env-cmd": "^10.1.0",
    "@semantic-release/git": "^10.0.1",
    "@commitlint/cli": "^19.7.1"
  },
  "config": {
    "commitizen": {
      "path": "git-cz"
    }
  },
  "keywords": [
    "sveltekit",
    "svelte",
    "i18n",
    "translations",
    "edge-s",
    "edges-svelte",
    "ssr",
    "ssr i18n"
  ],
  "scripts": {
    "dev": "vite dev",
    "build": "vite build && npm run prepack",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "format": "prettier --write .",
    "lint": "prettier --check . && eslint .",
    "precommit": "pnpm lint && pnpm check",
    "semantic-release": "env-cmd semantic-release",
    "commit": "pnpm format && git add . && git-cz && git push",
    "release": "pnpm commit && pnpm semantic-release"
  }
}