{
  "name": "@azure-net/kit",
  "version": "0.3.3",
  "files": [
    "dist",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*"
  ],
  "sideEffects": [
    "**/*.css"
  ],
  "svelte": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js"
    },
    "./lib": {
      "types": "./dist/lib/index.d.ts",
      "svelte": "./dist/lib/index.js"
    },
    "./request/rules": {
      "types": "./dist/core/request/rules/index.d.ts",
      "svelte": "./dist/core/request/rules/index.js"
    },
    "./request/messages": {
      "types": "./dist/core/request/rules/messages/index.d.ts",
      "svelte": "./dist/core/request/rules/messages/index.js"
    },
    "./provider": {
      "types": "./dist/core/provider/index.d.ts",
      "svelte": "./dist/core/provider/index.js"
    },
    "./provider/deps": {
      "types": "./dist/core/provider/dependencies/index.d.ts",
      "svelte": "./dist/core/provider/dependencies/index.js"
    },
    "./edges": {
      "types": "./dist/edges/index.d.ts",
      "svelte": "./dist/edges/index.js"
    },
    "./edges/server": {
      "types": "./dist/edges/server/index.d.ts",
      "svelte": "./dist/edges/server/index.js"
    },
    "./edges/state": {
      "types": "./dist/edges/state/index.d.ts",
      "svelte": "./dist/edges/state/index.js"
    },
    "./edges/context": {
      "types": "./dist/edges/context/index.d.ts",
      "svelte": "./dist/edges/context/index.js"
    },
    "./tools": {
      "types": "./dist/tools/index.d.ts",
      "svelte": "./dist/tools/index.js"
    },
    "./i18n": {
      "types": "./dist/i18n/index.d.ts",
      "svelte": "./dist/i18n/index.js"
    }
  },
  "peerDependencies": {
    "svelte": "^5.0.0"
  },
  "devDependencies": {
    "@eslint/compat": "^1.2.5",
    "@eslint/js": "^9.18.0",
    "@playwright/test": "^1.49.1",
    "@sveltejs/adapter-auto": "^6.0.0",
    "@sveltejs/kit": "^2.16.0",
    "@sveltejs/package": "^2.0.0",
    "@sveltejs/vite-plugin-svelte": "^5.0.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/svelte": "^5.2.4",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-svelte": "^3.0.0",
    "globals": "^16.0.0",
    "jsdom": "^26.0.0",
    "prettier": "^3.4.2",
    "prettier-plugin-svelte": "^3.3.3",
    "publint": "^0.3.2",
    "svelte": "^5.0.0",
    "svelte-check": "^4.0.0",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.20.0",
    "vite": "^6.2.6",
    "vitest": "^3.0.0",
    "@commitlint/cli": "^19.7.1",
    "semantic-release": "^24.2.3",
    "@semantic-release/git": "^10.0.1",
    "git-cz": "^4.9.0",
    "husky": "^9.1.7",
    "commander": "^13.1.0",
    "commitizen": "^4.3.1",
    "env-cmd": "^10.1.0"
  },
  "config": {
    "commitizen": {
      "path": "git-cz"
    }
  },
  "keywords": [
    "svelte"
  ],
  "dependencies": {
    "azure-net-tools": "^1.0.8",
    "edges-svelte": "^1.0.4",
    "edges-svelte-translations": "^0.1.2",
    "ky": "^1.8.1",
    "libphonenumber-js": "^1.12.9"
  },
  "scripts": {
    "dev": "vite dev",
    "build": "vite build && npm run prepack",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "format": "prettier --write .",
    "lint": "prettier --check . && eslint .",
    "test:unit": "vitest",
    "test": "npm run test:unit -- --run && npm run test:e2e",
    "test:e2e": "playwright test",
    "precommit": "pnpm lint && pnpm check",
    "semantic-release": "env-cmd semantic-release",
    "commit": "pnpm format && git add . && git-cz && git push",
    "release": "pnpm commit && pnpm semantic-release"
  }
}